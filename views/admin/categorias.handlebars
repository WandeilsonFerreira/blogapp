<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>
{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <small>Data de criação: {{date}}</small><br>   

            <div class="container">
                <div class="row">
                    <div class="col col-lg-2">
                        <a href="/admin/categorias/edit/{{_id}}"><button class="mt-2 btn btn-success btn-sm ">Editar Categoria</button></a>
                    </div>
                    <div class="col col-lg-2">
                        <form action="/admin/categorias/deletar" method="POST">
                            <input type="hidden" name="id" value="{{_id}}">
                            <button type="submit" class="btn btn-danger mt-2 btn-sm">Deletar categoria</button>
                        </form>
                    </div>     
                </div>    
            </div> 
        </div>        
    </div>
{{else}}    
   <h4 class="mt-4">Nenhuma categoria cadastrada</h4>
{{/each}}
