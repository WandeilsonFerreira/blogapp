<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <div class="container"> 
                <div class="row">
                        <div class="col">
                            <h4>{{titulo}}</h4>
                            <p>Descrição: {{descricao}}</p>
                            <small>Data:{{data}}</small><br>
                            <small>Categoria: {{categoria.nome}}</small><br>
                        </div>
                        <div class="col mt-5">
                            <a href="#"><button class="btn btn-success mt-2">Visualizar postagens</button></a>
                            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-2">Editar postagens</button></a>            
                            <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-2">Deletar postagem</button></a>
                        </div>            
                            
                </div>
            </div>
        </div>
    </div>
    {{else}}
        <p>Nenhuma postagem registrada</p>
    {{/each}}
 
    </div>
  </div>