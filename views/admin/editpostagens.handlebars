{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Editar postagem</h4>
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" value="{{postagem._id}}"" name="id">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control mt-2" value="{{postagem.titulo}}">

            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control mt-2" required value="{{postagem.slug}}">

            <label for="fescricao">Descirção: </label>
            <input type="text" name="descricao" class="form-control mt-2" required value="{{postagem.descricao}}">

            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control mt-2" required>{{postagem.conteudo}}</textarea>

            <select name="categoria" class="form-select mt-4">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <br>
            <button class="btn btn-success mt-2" type="submit">Editar postagem</button>
        </form>
    </div>

</div>